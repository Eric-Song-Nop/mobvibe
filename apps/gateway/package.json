{
	"name": "gateway",
	"version": "0.0.0",
	"type": "module",
	"scripts": {
		"dev": "tsx watch src/index.ts",
		"build": "tsc -p tsconfig.json",
		"start": "node dist/index.js",
		"start:migrate": "npx drizzle-kit migrate && node dist/index.js",
		"lint": "biome check --write .",
		"format": "biome format --write .",
		"test": "vitest --passWithNoTests",
		"db:generate": "drizzle-kit generate",
		"db:migrate": "drizzle-kit migrate",
		"db:push": "drizzle-kit push",
		"db:studio": "drizzle-kit studio"
	},
	"dependencies": {
		"@daveyplate/better-auth-tauri": "^0.1.6",
		"@mobvibe/shared": "workspace:*",
		"better-auth": "^1.4.9",
		"cors": "^2.8.5",
		"dotenv": "^17.2.3",
		"drizzle-orm": "^0.41.0",
		"express": "^4.21.2",
		"pg": "^8.13.0",
		"pino": "^9.6.0",
		"pino-pretty": "^13.1.1",
		"socket.io": "^4.8.1"
	},
	"devDependencies": {
		"@biomejs/biome": "2.3.11",
		"@types/cors": "^2.8.18",
		"@types/express": "^4.17.21",
		"@types/node": "^24.10.1",
		"@types/pg": "^8.11.0",
		"drizzle-kit": "^0.31.4",
		"tsx": "^4.19.3",
		"typescript": "~5.9.3",
		"vitest": "^2.1.8"
	}
}
